<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="142dp"
    android:layout_marginBottom="142dp"
    android:layout_marginEnd="42dp"
    android:layout_marginLeft="42dp"
    android:layout_marginRight="42dp"
    android:layout_marginStart="42dp"
    app:cardBackgroundColor="@color/medium_jungle_green"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp"
    app:contentPadding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_column"
            android:textColor="@color/colorTextWhite"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvMassage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle"
            android:text="@string/message"
            android:textColor="@color/colorTextWhite"
            android:textSize="16sp"
            android:visibility="gone"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/llButtonsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle"
            android:layout_marginTop="16dp"
            android:gravity="center|bottom"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/bColumnRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="@string/add_column_right"
                android:textColor="@color/colorTextWhite"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/bColumnLeft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="@string/add_column_left"
                android:textColor="@color/colorTextWhite"/>
        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/bNegative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/llButtonsContainer"
            android:background="@android:color/transparent"
            android:text="@string/cancel"
            android:textColor="@color/colorTextWhite"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>